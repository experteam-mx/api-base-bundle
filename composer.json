{
    "name": "experteam/api-base-bundle",
    "description": "Base functionality bundle for APIs",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Experteam",
            "email": "info@experteam.com.ec"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-redis": "*",
        "ext-bcmath": "*",
        "doctrine/doctrine-bundle": "^2.8",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "doctrine/orm": "^2.14",
        "friendsofsymfony/rest-bundle": "^3.5",
        "nelmio/api-doc-bundle": "^4.0",
        "php-di/phpdoc-reader": "^2.2",
        "symfony/config": "6.3.*|6.4.*",
        "symfony/dependency-injection": "6.3.*|6.4.*",
        "symfony/http-client": "6.3.*|6.4.*",
        "symfony/http-kernel": "6.3.*|6.4.*",
        "symfony/security-bundle": "6.3.*|6.4.*",
        "symfony/security-core": "6.3.*|6.4.*",
        "symfony/serializer": "6.3.*|6.4.*",
        "symfony/uid": "6.3.*|6.4.*",
        "symfony/validator": "6.3.*|6.4.*"
    },
    "require-dev": {
        "symfony/dotenv": "6.3.*|6.4.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.3.*|6.4.*",
        "symfony/phpunit-bridge": "6.3.*|6.4.*"
    },
    "autoload": {
        "psr-4": {
            "Experteam\\ApiBaseBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Experteam\\ApiBaseBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
